<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.kurramkurram.futaltacticalboard">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.FutsalCortActivity" />
        <activity android:name=".ui.SettingActivity" />

        <activity
            android:name=".ui.info.AppInfoActivity"
            android:label="@string/app_info"
            android:theme="@style/ActionBarMain" />

        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesActivity"
            android:label="@string/oss_license_title"
            android:theme="@style/ActionBarMain" />

        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
            android:theme="@style/ActionBarMain" />
    </application>

</manifest>