<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/setting_team_edit_title_text_width"
            android:layout_height="wrap_content"
            android:padding="@dimen/setting_team_edit_title_padding"
            android:text="@string/setting_team_edit_title"
            android:textSize="@dimen/setting_team_edit_title_text_size" />

        <ImageView
            android:id="@+id/edit_player_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/setting_team_edit_team_padding"
            android:src="@drawable/player_blue_1" />

        <ImageView
            android:id="@+id/edit_player_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/setting_team_edit_team_padding"
            android:src="@drawable/player_red_1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_number_text_view"
                android:layout_width="@dimen/setting_team_edit_title_text_width"
                android:layout_height="wrap_content"
                android:padding="@dimen/setting_team_edit_title_padding"
                android:text="@string/setting_team_edit_player_number_title"
                android:textSize="@dimen/setting_team_edit_title_text_size" />

            <Spinner
                android:id="@+id/player_number_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/player_name_text_view"
                android:layout_width="@dimen/setting_team_edit_title_text_width"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/setting_team_edit_team_padding"
                android:text="@string/setting_team_edit_player_name_title"
                android:textSize="@dimen/setting_team_edit_title_text_size" />

            <EditText
                android:id="@+id/player_name_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>