<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_others_list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/setting_others_list_item_text_margin"
        android:layout_weight="1"
        android:textColor="@color/tactical_board_default_text_color"
        android:textSize="@dimen/setting_others_list_item_text_size" />

    <ImageView
        android:id="@+id/list_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingStart="@dimen/setting_others_list_item_arrow_padding_se"
        android:paddingEnd="@dimen/setting_others_list_item_arrow_padding_se"
        android:src="@drawable/ic_arrow" />
</LinearLayout>