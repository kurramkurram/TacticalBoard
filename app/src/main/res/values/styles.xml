<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingPlayerIconImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:padding">@dimen/setting_team_edit_icon_padding</item>
    </style>

    <style name="SettingPlayerNameEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">@dimen/setting_team_edit_input_form_margin_e</item>
        <item name="android:hint">@string/setting_team_edit_player_name_title</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">5</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SettingPlayerNameButton">
        <item name="android:layout_width">@dimen/setting_team_edit_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/setting_team_edit_button_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/setting_team_edit_button_elevation</item>
        <item name="android:padding">@dimen/setting_team_edit_button_padding</item>
        <item name="android:textSize">@dimen/setting_team_edit_button_text_size</item>
        <item name="android:background">@drawable/setting_button_background</item>
    </style>

    <style name="ActionBarMain" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/tactical_board_color_main</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>
